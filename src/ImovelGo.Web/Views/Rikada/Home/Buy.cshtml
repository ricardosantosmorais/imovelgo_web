@model ImovelGo.Web.Models.CompanyViewModel
@using ImovelGo.Web.Controllers
@using System.Web
@{
    Layout = "~/Views/Rikada/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home Page";
    var currentPage = HomeController.currentPage;
    var componentResult = currentPage.Areas.FirstOrDefault(x => x.Name == "SearchResult");
}
<div class="clearfix"></div>
<!-- ============================ All Property ================================== -->
<section>

    <div class="container">
        <div class="row">

            <div class="col-lg-8 col-md-12 col-sm-12">
                <div id="partialResult" data-url="/@componentResult.Path" data-parameter="@System.Web.HttpUtility.UrlEncode(componentResult.File)"></div>
            </div>

            <!-- property Sidebar -->
                <div class="col-lg-4 col-md-12 col-sm-12">
                    <div class="page-sidebar">

                        <form action="/Home/Buy" method="get">
                            @Html.Hidden("OffSet", 0)
                            @Html.Hidden("PageSize", 10)
                            <!-- Find New Property -->
                            <div class="sidebar-widgets">

                                <h4>Filtros</h4>

                                <div class="form-group">
                                    <div class="input-with-icon">
                                        <input type="text" class="form-control" placeholder="Bairro ou Cidade">
                                        <i class="ti-search"></i>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        <div class="form-group">
                                            <div class="input-with-icon">
                                                <input type="text" class="form-control" placeholder="Mínimo">
                                                <i class="ti-money"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        <div class="form-group">
                                            <div class="input-with-icon">
                                                <input type="text" class="form-control" placeholder="Máximo">
                                                <i class="ti-money"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-with-icon">
                                        <select id="bedrooms" class="form-control">
                                            <option value="">&nbsp;</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                        </select>
                                        <i class="fas fa-bed"></i>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-with-icon">
                                        <select id="bathrooms" class="form-control">
                                            <option value="">&nbsp;</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                        </select>
                                        <i class="fas fa-bath"></i>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-with-icon">
                                        <select id="ptypes" class="form-control">
                                            <option value="">&nbsp;</option>
                                            <option value="1">Apartamento</option>
                                            <option value="2">Casa</option>
                                            <option value="3">Kitnet/Studio</option>
                                            <option value="4">Casa de condomínio</option>
                                        </select>
                                        <i class="ti-briefcase"></i>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-with-icon">
                                        <select id="vacancies" class="form-control">
                                            <option value="">&nbsp;</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5 ou mais</option>
                                        </select>
                                        <i class="ti-briefcase"></i>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-with-icon">
                                        <select id="cities" class="form-control">
                                            <option value="">&nbsp;</option>
                                            <option value="1">Los Angeles, CA</option>
                                            <option value="2">New York City, NY</option>
                                            <option value="3">Chicago, IL</option>
                                            <option value="4">Houston, TX</option>
                                            <option value="5">Philadelphia, PA</option>
                                            <option value="6">San Antonio, TX</option>
                                            <option value="7">San Jose, CA</option>
                                        </select>
                                        <i class="ti-briefcase"></i>
                                    </div>
                                </div>

                                <div class="range-slider">
                                    <label>Área m<sup>2</sup></label>
                                    <div data-min="0" data-max="500" data-min-name="min_area" data-max-name="max_area" data-unit="metros" class="range-slider-ui ui-slider" aria-disabled="false"></div>
                                    <div class="clearfix"></div>
                                </div>

                                <div class="ameneties-features">
                                    <div class="form-group" id="module">
                                        <a role="button" class="" data-toggle="collapse" href="#advance-search" aria-expanded="true" aria-controls="advance-search"></a>
                                    </div>
                                    <div class="collapse" id="advance-search" aria-expanded="false" role="banner">
                                        <ul class="no-ul-list">
                                            <li>
                                                <input id="a-1" class="checkbox-custom" name="a-1" type="checkbox">
                                                <label for="a-1" class="checkbox-custom-label">Ar condicionado</label>
                                            </li>
                                            <li>
                                                <input id="a-2" class="checkbox-custom" name="a-2" type="checkbox">
                                                <label for="a-2" class="checkbox-custom-label">Aceita pet</label>
                                            </li>
                                            <li>
                                                <input id="a-3" class="checkbox-custom" name="a-3" type="checkbox">
                                                <label for="a-3" class="checkbox-custom-label">Mobiliado</label>
                                            </li>
                                            <li>
                                                <input id="a-4" class="checkbox-custom" name="a-4" type="checkbox">
                                                <label for="a-4" class="checkbox-custom-label">Próximo ao metrô</label>
                                            </li>
                                            <li>
                                                <input id="a-4" class="checkbox-custom" name="a-4" type="checkbox">
                                                <label for="a-4" class="checkbox-custom-label">Próximo a praia</label>
                                            </li>
                                            <li>
                                                <input id="a-5" class="checkbox-custom" name="a-5" type="checkbox">
                                                <label for="a-5" class="checkbox-custom-label">Aquecedor</label>
                                            </li>
                                        </ul>
                                    </div>

                                    <button type="submit" class="btn btn-theme full-width">Buscar</button>

                                </div>

                            </div>
                        </form>
                    </div>
                    <!-- Sidebar End -->

                </div>
        </div>
    </div>
</section>
<!-- ============================ All Property ================================== -->
@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function (e) {
            var url = $('#partialResult').data('url');
            var param = $('#partialResult').data('parameter')
            $('#partialResult').load(url + "?GoalId=1&view=" + param + "@ViewBag.QueryString.Replace('?', '&')");
        });
    </script>
}